
{{#> layouts/boilerplate-landing-page title="Clinical trials search" body-class="" summary="This is a live search of the Australian New Zealand Clinical Trials Registry (ANZCTR). All clinical trials displayed on this website are sourced from the ANZCTR." }}

    {{#*inline "header-block"}}
        {{> includes/header
            header-img="img/act_logo.png"
            header-img-alt="Austalian Clinical Trials"
        }}
    {{/inline}}

    {{#*inline "subheader-block"}}
        {{> includes/subheader 
            subheader-class="health-sub-header--dark"
        }}
    {{/inline}} 


    {{#*inline "main-block"}}

    <div class="row">
       <div class="health-view-paragraph__facets col-lg-4">
            <div class="clinical-trials-filter" data-once="clinical-trials-filter">
                <button class="clinical-trials-filter__control au-display-md" aria-controls="clinical-trials-filter">
                    <span class="svg-inline--fa fa-fw"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M487.976 0H24.028C2.71 0-8.047 25.866 7.058 40.971L192 225.941V432c0 7.831 3.821 15.17 10.237 19.662l80 55.98C298.02 518.69 320 507.493 320 487.98V225.941l184.947-184.97C520.021 25.896 509.338 0 487.976 0z"></path></svg></span>
                    Filter results
                </button>
                <p class="au-sronly">You can narrow down the results using the filters</p>
                <div class="clinical-trials-filter__form clinical-trials-filter__form--mobile-hidden" id="clinical-trials-filter">
                    {{> includes/act/search-form--advanced 
                        search-text="Deserunt adipisicing"}}
                </div>
            </div>
       </div>

        <div class="health-view-paragraph__listing col-lg-8">
            <header>
                <div class="standard-gap--mobile-only">
                    <span class="au-display-xl au-display--inline">100</span> results sorted by trial registration date.
                </div>
                {{> includes/act/search-filters--applied }}
            </header>
            <ul class="health-listing clinical-trials-results">
                {{#each search-results}}
                    {{> includes/act/search-result
                        title=this.title
                        link=this.link
                        summary=this.summary
                        recruitmentStatus=this.recruitmentStatus
                        gender=this.gender
                        recruitmentSites=this.recruitmentSites
                        conditionCategory=this.conditionCategory
                        conditionCode=this.conditionCode
                    }}
                {{/each}}
            </ul>

            {{> includes/pager }}
        </div>
    </div>
    {{/inline}}


{{/layouts/boilerplate-landing-page}}
