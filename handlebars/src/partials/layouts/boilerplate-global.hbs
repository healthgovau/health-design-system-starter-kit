<!doctype html>
<html lang="en">
    <head>
        <title>
            {{#unless title}}
                HDS Boilerplate
            {{/unless}}
        </title>
        
        {{> includes/head }}

    </head>

    <body class="au-grid">
        <div class="au-body">
            {{> includes/nav--skipto }}

            {{> includes/header }}
            
            {{#> nav-block}}
                {{> includes/nav--primary
                        hero-src="https://picsum.photos//1500/500"
                        hero-alt="Hero 1 alt title"
                        links=menu
                }}
            {{/nav-block}}

            {{#> subheader-block}}
                {{!-- Subheader block --}}
            {{/subheader-block}}

            {{!-- Page layout --}}
            <div class="container">
                <div class="row">

                    {{#> full-width-block}}
                        {{!-- Full-width content goes here. --}}
                    {{/full-width-block}}
 
                    {{#> main-block}}
                        {{!-- Main content goes here. --}}
                    {{/main-block}}

                    {{#> sidenav-block}}
                        {{!-- Side goes here. --}}
                    {{/sidenav-block}}

                </div>
            </div>
            
            {{> includes/postbody }}
        </div>

        <footer class="au-footer au-footer--dark au-body au-body--dark" role="contentinfo">
            <div class="container">
                {{#> footer-block}}
                    {{> includes/footer }}
                {{/footer-block}}
            </div>
        </footer>

        {{> includes/backtotop }}

        {{#> scripts-block}}
            {{!-- Custom scripts per page can be added. --}}
        {{/scripts-block}}
    
    </body>
</html>