<!doctype html>
<html lang="en">
    <head>
        <title>
            {{#unless title}}
                HDS Boilerplate full width
            {{/unless}}
        </title>
        
        {{> includes/head }}

    </head>

    <body class="au-grid {{ body-class }}">
        <div class="au-body">
            {{> includes/nav--skipto }}

            {{> includes/header }}
            
            {{#> nav-block}}
                {{> includes/nav--primary
                        hero-src="https://picsum.photos//1500/500"
                        hero-alt="Hero 1 alt title"
                        links=menu
                }}
            {{/nav-block}}

            {{#> subheader-block}}
                {{!-- Subheader block --}}
            {{/subheader-block}}

            {{!-- Page layout --}}
            <div class="container-fluid full-width">
                <div class="row">

                    {{!-- Main content pane --}}
                    <main class="main-content-full" id="content" role="main">
                        <div class="region region-content">
                            {{#> main-block}}
                                {{!-- Main content bands go here --}}
                            {{/main-block}}
                        </div>
                    </main>

                </div>
            </div>
            
            {{> includes/postbody }}
        </div>

        <footer class="au-footer au-footer--dark au-body au-body--dark" role="contentinfo">
            <div class="container">
                {{#> footer-block}}
                    {{> includes/footer }}
                {{/footer-block}}
            </div>
        </footer>

        {{> includes/backtotop }}

        {{#> scripts-block}}
            {{!-- Custom scripts per page can be added. --}}
        {{/scripts-block}}
    
    </body>
</html>