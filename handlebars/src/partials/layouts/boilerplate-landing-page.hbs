<!doctype html>
<html lang="en">
    <head>
        <title>
            {{#unless title}}
                HDS Boilerplate - full width ladning page
            {{/unless}}
        </title>
        
        {{> includes/head }}

    </head>

    <body class="au-grid {{body-class}}">
        <div class="au-body">
            {{> includes/nav--skipto }}

            {{#> header-block }}
            {{/header-block}}
            
            {{#> nav-block}}
                {{> includes/act/nav--dropdown }}
            {{/nav-block}}

            {{#> subheader-block}}
                {{!-- Subheader block --}}
            {{/subheader-block}}

            {{!-- Page layout --}}
            <div class="container health-content">
                <div class="row">
                    {{!-- 1-pane only --}}
                    <div class="col-xs-12" id="content">
                        <main class="main-content" role="main">
                            <div class="region region-content">
                                {{#> main-block}}
                                    {{!-- Full-width content goes here. --}}
                                {{/main-block}}
                            </div>

                            <div class="region--content_bottom">
                                {{#> postbody-block}}
                                    {{!-- Post-body goes here. --}}
                                    {{> includes/anything-wrong }}
                                {{/postbody-block}}
                            </div>
                        </main>
                    </div>
                </div>
            </div>
        </div>

        <footer class="au-footer au-footer--dark au-body au-body--dark" role="contentinfo">
            <div class="container">
                {{#> footer-block}}
                    {{> includes/footer }}
                {{/footer-block}}
            </div>
        </footer>

        {{> includes/backtotop }}

        {{#> scripts-block}}
            {{!-- Custom scripts per page can be added. --}}
        {{/scripts-block}}
    
    </body>
</html>